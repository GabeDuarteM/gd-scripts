{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "lib": ["esnext"],
    "typeRoots": ["../../node_modules/@types", "../@types"],
    "outDir": "../../build",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true
  },
  "include": ["../../src/**/*"],
  "exclude": ["../../node_modules/**/*", "../../build/**/*"]
}
