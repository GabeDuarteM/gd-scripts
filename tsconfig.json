{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["esnext"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "outDir": "./build",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "./node_modules/**/*",
    "./build/**/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/**/*.test.js",
    "./src/**/*.test.jsx"
  ]
}
